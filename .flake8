[flake8]
doctests = true
format = "%(path)s:%(row)d:%(col)d %(code)s: %(text)s (https://lintlyci.github.io/Flake8Rules/rules/%(code)s.html)"
exclude = __pycache__, .git, venv/
# ignore missing docstrings and ignore no whitespace before colon
ignore = D100,D101,D102,D103,D104,D105,D106,D107,E203,E501,W503,C901
max-complexity = 7
max-line-length = 88
show-source = true
inline-quotes = double
